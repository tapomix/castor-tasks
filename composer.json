{
    "name": "tapomix/castor-tasks",
    "description": "Collection of reusable Castor tasks",
    "keywords": ["castor", "task-runner", "docker", "php", "devops", "qa", "vps"],
    "type": "castor-project",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Tapomix",
            "email": "dev@tapomix.me"
        }
    ],
    "require":{
        "php": "^8.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.90",
        "jolicode/castor": "^1.0",
        "phpunit/phpunit": "^12.0",
        "rector/rector": "^2.2"
    },
    "autoload": {
        "files": [
            "src/context.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tapomix\\Castor\\Tests\\": "tests/"
        },
        "files": [
            "tests/autoload.php"
        ]
    },
    "config": {
        "sort-packages": true
    }
}